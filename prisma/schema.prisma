generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 Int           @id @default(autoincrement())
  githubId           String        @unique
  email              String?       @unique
  username           String?       @unique
  name               String?
  avatarUrl          String?
  githubAccessToken  String
  githubRefreshToken String
  installationId     Int?          @unique
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  pullRequests       PullRequest[]
  comments           Comment[]
}

model PullRequest {
  id               BigInt   @id
  githubDeliveryId String   @unique
  number           Int
  title            String
  body             String?
  state            String
  htmlUrl          String
  diffUrl          String
  createdAt        DateTime
  updatedAt        DateTime

  // Stats
  commits      Int
  additions    Int
  deletions    Int
  changedFiles Int

  // User/Repo Info (Simplified or Linked)
  authorName String
  repoName   String

  // Relations
  userId   Int? // If the author is a user of our app
  user     User?     @relation(fields: [userId], references: [id])
  comments Comment[]
}

model Comment {
  id         BigInt   @id
  body       String
  filePath   String
  lineNumber Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  pullRequestId BigInt
  pullRequest   PullRequest @relation(fields: [pullRequestId], references: [id])

  // User Info
  userId Int
  user   User @relation(fields: [userId], references: [id])
}
